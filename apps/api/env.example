# API service environment variables

PORT=4000
HOST="0.0.0.0"

# CORS
CORS_ORIGIN="http://localhost:3000"

# JWT / Auth
JWT_SECRET="replace-with-strong-secret"
NEXTAUTH_SECRET="replace-with-strong-secret"
JWT_EXPIRATION="1h"

# Database
# Note: For MongoDB Atlas, use: mongodb+srv://username:password@cluster.mongodb.net/Campus-Management-System
# Database name is case-sensitive! Use "Campus-Management-System" (capital C and M)
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/Campus-Management-System"

# Redis + queues
REDIS_URL="redis://localhost:6379"

# Storage
STORAGE_BUCKET="cms-media"
STORAGE_REGION="us-east-1"
STORAGE_ENDPOINT="https://s3.amazonaws.com"
STORAGE_ACCESS_KEY="changeme"
STORAGE_SECRET_KEY="changeme"

