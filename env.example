# Shared environment variables

# Database connection string (MongoDB via Prisma)
# Note: Database name is case-sensitive! Use "Campus-Management-System" (capital C and M)
# For local MongoDB: mongodb://localhost:27017/Campus-Management-System
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/Campus-Management-System
DATABASE_URL="mongodb://localhost:27017/Campus-Management-System"

# Redis connection for queues, cache, rate limiting
REDIS_URL="redis://localhost:6379"

# Object storage configuration
STORAGE_BUCKET="cms-media"
STORAGE_REGION="us-east-1"
STORAGE_ENDPOINT="https://s3.amazonaws.com"
STORAGE_ACCESS_KEY="changeme"
STORAGE_SECRET_KEY="changeme"

# Email provider (Resend/SendGrid)
EMAIL_PROVIDER_API_KEY="changeme"

# Monitoring / Observability
SENTRY_DSN=""

# Default admin bootstrap credentials (seed script usage)
ADMIN_EMAIL="admin@example.edu"
ADMIN_PASSWORD="ChangeMe123!"

# NextAuth shared secret for JWT session tokens
NEXTAUTH_SECRET="replace-with-strong-secret"
NEXTAUTH_DEMO_ENABLED="true"
NEXTAUTH_DEMO_PASSWORD="ChangeMe123!"
NEXTAUTH_USE_PRISMA="false"

